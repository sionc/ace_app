  </div>

  <div class="span6">

    <div class="widget">

      <div class="widget-header">
        <i class="icon-envelope"></i>

        <h3>Commands</h3>
      </div>
      <!-- /widget-header -->

      <div class="widget-content">
        <form class="form-inline">
          <input type="text" class="input-large" placeholder="Monitor Command">
          <button type="submit" class="btn btn-primary"><i class="icon-envelope"></i>&nbsp Send</button>
        </form>
            <pre class="pre-scrollable">
.lists
